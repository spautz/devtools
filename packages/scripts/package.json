{
  "name": "@spautz-devtools/scripts",
  "binName": "spautz-scripts",
  "version": "0.0.1",
  "description": "Some personal dev scripts",
  "keywords": [],
  "license": "MIT",
  "homepage": "https://github.com/spautz/devtools/packages/scripts#readme",
  "bugs": "https://github.com/spautz/devtools/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spautz/devtools.git",
    "directory": "packages/scripts"
  },
  "author": {
    "name": "Steven Pautz",
    "url": "http://stevenpautz.com/"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin/",
    "dist/",
    "src/",
    "LICENSE",
    "*.md"
  ],
  "bin": {
    "spautz-scripts": "./bin/spautz-scripts.js"
  },
  "scripts": {
    "____ LIFECYCLE HOOKS _______________________________________________": "",
    "prebuild": "rimraf ./dist",
    "prepare": "pnpm run build",
    "prepublishOnly": "pnpm run dev:readonly",
    "____ INTEGRATION ___________________________________________________": "",
    "clean": "rimraf ./dist",
    "dev": "pnpm run format && pnpm run lint",
    "dev:readonly": "pnpm run format:verify && pnpm run lint",
    "all": "pnpm run dev",
    "all:readonly": "pnpm run dev:readonly",
    "____ INDIVIDUAL COMMANDS ___________________________________________": "",
    "build": "tsc -p tsconfig.json",
    "format": "prettier --write .",
    "format:verify": "prettier --list-different .",
    "lint": "eslint . --max-warnings 0"
  },
  "dependencies": {
    "sade": "^1.7.4"
  },
  "devDependencies": {
    "@tsconfig/node10": "1.0.7"
  }
}
